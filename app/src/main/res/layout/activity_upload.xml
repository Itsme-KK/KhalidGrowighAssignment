<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarHome"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/CustomToolbarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Upload Image"
        app:titleCentered="true"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarHome">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_upload_from_gallery"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/add_screen_image_placeholder"
            tools:src="@drawable/add_screen_image_placeholder" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_browse_image"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/shape_text_view_border"
            android:gravity="center"
            android:text="Select image"
            android:textColor="#1E1E1E"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_upload_image"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/shape_buton_background"
            android:gravity="center"
            android:text="Upload image"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>